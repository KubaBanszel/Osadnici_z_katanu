import tahy

def budovy():
    budovy1 = tahy.poleHrace.count("1")
    budovy2 = tahy.poleHrace.count("2")
    budovy3 = tahy.poleHrace.count("3")
    budovy4 = tahy.poleHrace.count("4")
    budovy5 = tahy.poleHrace.count("5")
    
    print(f"Budov na čísle 1 vlastníš {budovy1}.")
    print(f"Budov na čísle 2 vlastníš {budovy2}.")
    print(f"Budov na čísle 3 vlastníš {budovy3}.")
    print(f"Budov na čísle 4 vlastníš {budovy4}.")
    print(f"Budov na čísle 5 vlastníš {budovy5}.")
